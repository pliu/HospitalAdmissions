<h2>Prescribe medication</h2>

<%= form_tag(:action => 'create_medication', :method => "post", params: {patient: @patient, patId: @patId}) do %>

  <%= label_tag(:drug_name, "Drug Name:") %>
  <%= text_field_tag(:drug_name, '', required: true) %>
  <br>
  <%= label_tag(:daily_units, "Daily Units:") %>
  <%= text_field_tag(:daily_units, '', required: true) %>
  <br>

  <%= label_tag(:admin_per_day, "Admin Per Day") %>
  <%= text_field_tag(:admin_per_day, '', required: true) %>
  <br>

  <%= label_tag(:admin_method, "Admin Method") %>
  <%= text_field_tag(:admin_method, '', required: true) %>
  <br>

  <%= label_tag(:start, "Start Date") %>
  <%= date_field_tag(:start, '', required: true) %>
  <br>

  <%= label_tag(:end, "End Date") %>
  <%= date_field_tag(:end, '', required: true) %>
  <br>
  <br>

  <%= submit_tag "Prescribe" %>

<% end -%>